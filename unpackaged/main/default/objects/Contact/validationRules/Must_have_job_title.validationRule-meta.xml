<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Must_have_job_title</fullName>
    <active>false</active>
    <description>Ensures the contact has a job title</description>
    <errorConditionFormula>ISBLANK(Title) &amp;&amp; $Profile.Name != &#39;System Administrator&#39;</errorConditionFormula>
    <errorDisplayField>Title</errorDisplayField>
    <errorMessage>A contact must have a title</errorMessage>
</ValidationRule>
