<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Must_have_a_score_between_0_and_10</fullName>
    <active>true</active>
    <description>Ensures a rating has a score between 0 and 10.</description>
    <errorConditionFormula>Score__c &lt; 0 || Score__c &gt; 10</errorConditionFormula>
    <errorDisplayField>Score__c</errorDisplayField>
    <errorMessage>The score must be between 0 and 10</errorMessage>
</ValidationRule>
