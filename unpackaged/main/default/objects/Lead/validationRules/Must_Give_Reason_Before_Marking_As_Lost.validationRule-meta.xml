<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Must_Give_Reason_Before_Marking_As_Lost</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL(Status, 'Lost') &amp;&amp; ISPICKVAL(Lost_Reason__c, '')</errorConditionFormula>
    <errorDisplayField>Lost_Reason__c</errorDisplayField>
    <errorMessage>Must select a lost reason before marking the lead as lost</errorMessage>
</ValidationRule>
